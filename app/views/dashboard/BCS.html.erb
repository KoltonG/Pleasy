      <!-- Core Coursess -->
      <div class="example course-list core">
        <div class="grid fluid">
          <div class="row no-margin">
            <div class="listview">

              <!-- Boxes -->
              <% @core_courses.each do |course| %>
                <a href="#" class="list course-box tooltip" title="<%= course.description %>">
                  <div title="" class="list-content bg-lime fg-taupe" style="font-family: 'Lato'; padding: 5px 10px;">
                    <div style="width: intrinsic;width: -moz-max-content;width: -webkit-max-content;height: 56px; text-align: center; font-family: 'Lato'; font-weight: 400;" class="icon">
