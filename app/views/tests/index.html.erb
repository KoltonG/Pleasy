<h1>Courses I can't take</h1>
<table>
  <thead>
    <tr>
      <th>Course_detail id</th>
      <th>Course name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restricted_courses.each do |course_details| %>
      <tr>
        <td><%= course_details.id %></td>
        <td><%= course_details.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Courses I can take</h1>
<table>
  <thead>
  <tr>
    <th>Course_detailID</th>
    <th>Course name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

    <tbody>
        <% @available_courses.each do |course_details| %>
            <tr>
              <td><%= course_details.id %></td>
              <td><%= course_details.name %></td>
            </tr>
        <% end %>
    </tbody>

</table>