<h1>Courses to register on</h1>
<table>
  <thead>
    <tr>
      <th>Course_dept</th>
      <th>Course_number</th>
      <th>Course_details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.dept %></td>
        <td><%= course.number %></td>
        <td><%= course.description %></td>
      </tr>
      <% for section in course.sections %>
        <tr>
          <td></td>
          <td></td>
          <td> <strong>Section Number:<strong/> <%=h section.section %> Year: <%=h section.year %> Term: <%=h section.term %> </td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>




